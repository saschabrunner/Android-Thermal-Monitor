<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Main">
        <CheckBoxPreference
            app:key="rootEnabled"
            app:title="Enable root functions" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Overlay">
        <EditTextPreference
            app:key="overlayTextGravity"
            app:title="Overlay position" />
        <EditTextPreference
            app:key="overlayBackgroundColor"
            app:title="Background color and opacity" />
        <EditTextPreference
            app:key="overlayTextColor"
            app:title="Text color" />
        <EditTextPreference
            app:key="overlayTextSize"
            app:title="Text size" />
        <EditTextPreference
            app:key="overlayLabelVisibility"
            app:title="Show labels" />
        <EditTextPreference
            app:key="overlayLabelWidth"
            app:title="Label width" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Thermal Monitor">
        <CheckBoxPreference
            app:key="thermalMonitorEnabled"
            app:title="Enable thermal monitoring" />

        <CheckBoxPreference
            app:dependency="rootEnabled"
            app:key="thermalMonitorUseRoot"
            app:title="Use root to access thermal zones" />

        <EditTextPreference
            app:key="thermalMonitorRefreshInterval"
            app:title="Refresh interval (in ms)" />
    </PreferenceCategory>

    <PreferenceCategory app:title="CPU Frequency Monitor">
        <CheckBoxPreference
            app:key="cpuFreqMonitorEnabled"
            app:title="Enable CPU frequency monitoring" />

        <EditTextPreference
            app:key="cpuFreqMonitorRefreshInterval"
            app:title="Refresh interval (in ms)" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>