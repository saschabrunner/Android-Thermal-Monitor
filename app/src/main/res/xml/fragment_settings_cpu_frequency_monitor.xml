<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="CPU Frequency Monitor">
        <CheckBoxPreference
            app:defaultValue="true"
            app:key="cpuFreqMonitorEnabled"
            app:title="Enable CPU frequency monitoring" />

        <com.gitlab.saschabrunner.thermalmonitor.main.ui.CustomSeekBarPreference
            android:max="9990"
            app:defaultValue="1000"
            app:key="cpuFreqMonitorRefreshInterval"
            app:min="500"
            app:stepWidth="100"
            app:title="Refresh interval (in ms)" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>